{
  "name": "Dark Theme for Canvas",
  "version": "0.1",
  "manifest_version": 3,

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "index.html"
  },

  "host_permissions": ["<all_urls>"],

  "permissions": ["webNavigation", "scripting", "storage"],

  "background": {
    "service_worker": "app.js"
  },

  "web_accessible_resources": [
    {
        "resources": ["main.css", "assets/icon-x-black-163c6230a4.svg"],
        "matches": ["<all_urls>"]
    }
  ]
}
