{
  "name": "Themes for Canvas",
  "version": "0.1",
  "manifest_version": 3,

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "index.html"
  },

  "host_permissions": ["<all_urls>"],

  "permissions": ["tabs", "scripting"],

  "background": {
    "service_worker": "app.js"
  },

  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"],
        "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
        "resources": ["main.css"],
        "matches": ["<all_urls>"]
    }
  ]
}
